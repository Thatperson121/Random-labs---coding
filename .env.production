# API Configuration
VITE_API_KEY=your_production_api_key
VITE_API_URL=https://your-netlify-site.netlify.app/.netlify/functions

# WebSocket Configuration
# Using Netlify Functions for WebSocket support
VITE_WS_URL=wss://your-netlify-site.netlify.app/.netlify/functions/websocket

# Storage Configuration
VITE_STORAGE_PREFIX=codecollab

# Feature Flags
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_CODE_EXECUTION=true

# Security
VITE_MAX_EXECUTION_TIME=30000
VITE_ALLOWED_ORIGINS=https://your-netlify-site.netlify.app

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# OpenAI API Key - IMPORTANT: DO NOT use VITE_ prefix for sensitive keys
# This will be used by Netlify functions but NOT exposed to the browser
OPENAI_API_KEY=your_openai_api_key_here

# Non-sensitive configuration for AI features (safe to expose to browser)
VITE_AI_FEATURES_ENABLED=true

# Server Configuration
API_PORT=3000 